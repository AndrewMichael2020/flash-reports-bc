# Database connection
DATABASE_URL=sqlite:///./crimewatch.db

# Google Gemini API Key
GEMINI_API_KEY=your_api_key_here

# Dev server settings
ENV=dev
HOST=0.0.0.0
PORT=8000

# FRONTEND_ORIGINS - comma-separated list for local/tunnel dev
# Example: FRONTEND_ORIGINS="http://localhost:3000,https://<codespace>-3000.app.github.dev"
FRONTEND_ORIGINS=http://localhost:3000

# Optional regex for app.github.dev Codespaces
CORS_ALLOW_ORIGIN_REGEX=https://.*\.app\.github\.dev